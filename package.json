{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^6.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-slick": "^0.24.0",
    "react-sticky-fill": "^0.8.4",
    "react-visibility-sensor": "^5.0.2",
    "styled-components": "^4.2.0",
    "styled-icons": "^7.15.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "yarn build && npx firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-loader": "^8.0.6",
    "firebase-tools": "^7.0.0",
    "global": "^4.4.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-scripts": "^3.0.1",
    "worker-loader": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
